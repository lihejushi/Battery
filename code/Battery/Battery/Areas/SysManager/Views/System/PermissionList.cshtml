@model List<Battery.Framework.Attributes.PermissionModel>
@{
    ViewBag.Title = "角色权限";
    Html.AddCssFileParts("~/Content/manager/css/datatables/dataTables.bootstrap.css");
}
<div class="row">
    <div class="col-sm-12">
    <table id="TargetTable" class="table table-bordered table-striped dataTable">
        <thead>
            <tr>
                <th style="width: 100px">标题</th>
                <th style="width: 100px">控制器</th>
                <th style="width: 100px">动作</th>
                <th>备注</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderBy(i => i.ControllerName).OrderBy(i => i.Rank))
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.ControllerName</td>
                    <td>@item.ActionName</td>
                    <td>@item.Memo</td>
                </tr>
            }
            @if (Model.Count == 0)
            {         
                <tr id="nocontenttr">
                    <td colspan="4">暂无数据</td>
                </tr>
            }
        </tbody>
    </table>
    </div>
</div>