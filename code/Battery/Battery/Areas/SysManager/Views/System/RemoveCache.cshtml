@{
    ViewBag.Title = "清理缓存";
}

<div class="row">
  <div class="col-md-3">&nbsp;</div>
  <div class="col-md-6">
      <div class="panel panel-danger">
        <div class="panel-heading">
            <h3 class="panel-title">清理缓存</h3>
        </div>
        <div class="panel-body">
            <div class="alert alert-danger" role="alert">此操作将清理系统中的缓存</div>
            <form method="post">
                <div class="form-group">
                    <label class="control-label">缓存Key</label>
                    <input type="text" value="" name="Key" class="form-control" />
                    <p class="help-block ValidateMsgTip">不填写缓存Key，则将所有缓存全部清理！</p>
                </div>                
                <div class="form-group">
                    <label class="control-label">用户类型</label>
                    <div>
                        <label class="radio-inline">
                            <input type="radio" name="RemoveType" value="1" checked="checked"> 精准匹配
                        </label>
                        <label class="radio-inline">
                            <input type="radio" name="RemoveType" value="2"> 模糊搜索
                        </label>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary btn-lg btn-block">确定清理</button>
            </form>
        </div>
    </div>

  </div>
  <div class="col-md-3">&nbsp;</div>
</div>