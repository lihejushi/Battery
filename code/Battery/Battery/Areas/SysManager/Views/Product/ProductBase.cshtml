                        <td>@(model != null ? model.UserArea : "")</td>
                    </tr>
                    <tr>
                        <td align="right">适用类型</td>
                        <td>
                            @(model != null ? model.TypeFor : "")
                        </td>
                    </tr>
                    <tr>
                        <td align="right">激活日期</td>
                        <td>
                            @(model != null ? model.ActiveDate : "")
                        </td>
                    </tr>
                    <tr>
                        <td align="right">预计报废日期</td>
                        <td>@(model != null ? model.ScrapDate : "")</td>
                    </tr>
                    <tr>
                        <td align="right">实际报废日期</td>
                        <td>@(model != null ? model.RealScrapDate : "")</td>
                    </tr>
                    <tr>
                        <td align="right">保修期</td>
                        <td>@(model != null ? model.Guarantee : "")</td>
                    </tr>
                    <tr>
                        <td align="right">回收人员姓名</td>
                        <td>@(model != null ? model.BackStaffName : "")</td>
                    </tr>
                    <tr>
