                        <td>@(model != null ? model.CreateTimeT : "")</td>
                    </tr>
                    <tr>
                        <td align="right">出厂人员</td>
                        <td>@(model != null ? model.LibraryName : "")</td>
                    </tr>
                    
                </tbody>
